<% layout('components/boilerplate.ejs') -%>
    <% if(currentUser) { %>
        <link rel="stylesheet" href="/stylesheets/mypage.css">
        <div class="headerDiv">
            <h1 class="mypageHeader">
                <%= currentUser.username %>님의 마이페이지
            </h1>
            <div class="box">
                <h2 class="fair_tier">페어등급:
                    <%= currentUser.fair_tier %>
                </h2>
            </div>
            
            <div class="box">
                <button class="btn btn-info newGame">
                    <a class="newGameLink" href="/mypage/new">새로운 경기 등록하기</a>
                </button>
            </div>
        </div>
        <div class="mainBox">
            <h2 class="registedPlay box">등록된 경기들</h2>
            <table class="table text-center">
                <thead class="align-middle">
                    <tr>
                        <th scope="row" class="col-1">지역</th>
                        <td class="col-2">시간</td>
                        <td class="col-1">종목</td>
                        <td class="col-3">내용</td>
                        <td class="col-1">티어</td>
                        <td class="col-1">자세히 보기</td>
                    </tr>
                </thead>
                <% for(let product of products) { %>
                    <% if(product.username===currentUser.username) { %>
                        <tbody class="align-middle">
                            <tr>
                                <th scope="row">
                                    <%=product.area%>
                                </th>
                                <td>
                                    <%=product.formattedDay%>
                                    <div class="time-highlight">
                                        <%=product.formattedTime%>
                                    </div>                           
                                </td>
                                <td>
                                    <%= product.sport %>
                                </td>
                                <td class="content">
                                    <%=product.contents%>
                                </td>
                                <td>
                                    <%=product.tier%>
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" href="/mypage/<%= product._id %>">보기</a>
                                </td>
                            </tr>
                        </tbody>
                        <% } %>
                    <% } %>
            </table>
        </div>
        <% } %>