<header class="header bg-white text-center col sticky-top" style="font-family: 'Black Han Sans', sans-serif;">
    <div class="upperMenu">
        <div class="ms-4">
            <a href="/" id="fair_paly_a">
                <img class="row-4" id="headerLogo" src="/pictures/fair-play.png" alt="logo"> <span style="font-size: 1.2em;">Fair Play</span>
            </a>
        </div>
        <div class="upperMenuInside m-2">
            <div>
                <img id="headerLogin" src="/pictures/login.jpg" alt="login" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuLink">
                    <% if(!currentUser) { %>
                    <li><a class="dropdown-item" href="/login">로그인</a></li>
                    <li><a class="dropdown-item" href="/register">회원가입</a></li>
                    <% } else { %>
                    <li> <a class="dropdown-item" href="/mypage"><%= currentUser.username %>의 마이페이지</a></li>
                    <li><a class="dropdown-item" href="/logout">로그아웃</a></li>
                    <% } %>
                </ul>
            </div>
