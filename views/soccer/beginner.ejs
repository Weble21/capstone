<% layout('components/boilerplate.ejs') -%>
    <link rel="stylesheet" href="/stylesheets/soccer.css">

    <div>
        <div>
            <div class="subHeader">
                <h4 class="tierClass" style="color: #a2da12; text-shadow: 1px 1px #ffffff, -1px -1px #ffffff, 1px -1px #ffffff, -1px 1px #ffffff;">&nbsp;비기너 클래스<img src="\pictures\tea-leaf.png" alt=""></h4>
                </h4>
                <div class="selectTier">
                    <h2>모집중인 경기<i>-soccer-</i></h2>
                </div>
            </div>
            <br>
            
            <div class="tierDropDown">
                <%- include('index.ejs') %>
            </div>
            <table class="table text-center">
                <thead class="align-middle">
                    <tr>
                        <th scope="row" class="col-2">지역</th>
                        <td class="col-2">시간</td>
                        <td class="col-6">내용</td>
                        <td class="col-2">신청</td>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <% for(let product of products) { %>
                        <% if(product.tier === 'beginner') { %>
                        <tr>
                            <th scope="row">
                                <%=product.area%>
                            </th>
                            <td>
                                <%=product.time%>
                            </td>
                            <td>
                                <%=product.contents%>
                            </td>
                            <td><button class="applyButton" onclick="apply()">신청하기!</button></td>
                        </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>